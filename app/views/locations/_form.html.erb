<%= simple_form_for(@location) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  
    <%= f.input :address %>
    <%= f.input :lat %>
    <%= f.input :lon %>
    
    <h3>Opening rules</h3>
    <div id='opening_rules'>
      <%= f.simple_fields_for :opening_rules, f.object.opening_rules.order(:weekday) do |r| %>
        <%= render 'opening_rule_fields', f: r %>
      <% end %>
      <div id='links'>
        <%= link_to_add_association 'add rule', f, :opening_rules %>
      </div>    
    </div>    
  
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
